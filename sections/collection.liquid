<h1 class="h1">{{ collection.title }}</h1>

{%- unless collection.filters == empty -%}
  {%- for filter in collection.filters -%}

  {%- endfor -%}
{%- endunless -%}

<ul>
  {%- for product in collection.products -%}
    <li>
      {% render 'product-item', product: product %}
    </li>
  {%- endfor -%}
</ul>

