<h1 class="text-5xl">{{ blog.title }}</h1>

{%- unless blog.articles == empty -%}
  <section class="article-list">
    {% render 'article-item' for blog.articles as article %}
  </section>
{%- else -%}
  <p>No posts</p>
{%- endunless -%}

{% stylesheet %}
  .article-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Blog",
  "tag": "section",
  "class": "max-w-screen-lg mx-auto py-8 px-4 paragraph",
  "settings": [

  ]
}
{% endschema %}
