<section class="max-w-screen-lg mx-auto py-8 px-4">
  <p>
    <a href="#" class="link">.link</a>
    <a href="#" class="link-underline">.link-underline</a>
    <a href="#" class="link accent1">.link.accent1</a>
    <a href="#" class="link accent2">.link.accent2</a>
  </p>
  <p>
    <button class="button">.button</button>
    <button class="button" disabled>.button[disabled]</button>
  </p>
  <p>
    <button class="action">.action</button>
    <button class="action-alt">.action-alt</button>
    <button class="action accent2">.action.accent2</button>
    <button class="action-alt accent2">.action-alt.accent2</button>
    <button class="action lg">.action.lg</button>
  </p>
  <p><button class="action full">.action.full</button></p>
  <p>
    <input class="input" type="email" placeholder=".input[type=email]" />
    <select class="input">
      <option default selected disabled>select.input</option>
    </select>
  </p>
</section>
