{
  "name": "danshari",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/mitchuman/danshari.git",
  "author": "Mitchell Christ <mitchell@human.marketing>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "shopify:switch": "shopify switch --store=human-dev.myshopify.com",
    "start": "yarn shopify:switch && shopify theme serve",
    "dev": "run-p dev:*",
    "dev:css": "tailwindcss -i assets/theme.css -o assets/theme.build.css --watch",
    "dev:js": "rm -f assets/*.build.js && esbuild assets/*.js --outdir=assets --out-extension:.js=.build.js --watch",
    "build": "run-s build:*",
    "build:css": "tailwindcss -i assets/theme.css -o assets/theme.build.css --postcss --minify",
    "build:js": "rm -f assets/*.build.js && esbuild assets/*.js --outdir=assets --out-extension:.js=.build.js --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "esbuild": "^0.13.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.9",
    "tailwindcss": "^2.2.17"
  }
}
