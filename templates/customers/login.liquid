{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="max-w-screen-sm mx-auto py-8 px-4 text-center">
  <section id="forgot" class="richtext">
    <h2 class="text-5xl">Forgot your password?</h2>

    {% form 'recover_customer_password' %}
      {{ form_errors | default_errors }}

      <fieldset class="col-2">
        <label class="colspan">
          <input class="input" name="email" value="" autocomplete="email" type="email" placeholder="Email" required />
        </label>

        <button class="action colspan">Retrieve password</button>
      </fieldset>
    {% endform %}

    <p>
      <a href="#login" class="link accent1">Cancel</a>
    </p>
  </section>

  <section id="login" class="richtext">
    <h1 class="text-5xl">Login</h2>

    {% form 'customer_login', return_to: routes.root_url %}
      {{ form_errors | default_errors }}

      <fieldset class="col-2">
        <label class="colspan">
          <input class="input" name="customer[email]" value="" autocomplete="email" type="email" placeholder="Email" required />
        </label>

        <div class="colspan">
          <label>
            <input class="input" name="customer[password]" value="" autocomplete="current-password" type="password" placeholder="Password" required />
          </label>
          <div style="text-align: left;">
            <a href="#forgot" class="link accent1"><small>Forgot your password?</small></a>
          </div>
        </div>

        <button class="action colspan">Login</button>
      </fieldset>
    {% endform %}

    <p>
      <a href="{{ routes.account_register_url }}" class="link accent1">Create an account</a>
    </p>
  </section>

  {%- if shop.checkout.guest_login -%}
    {% form 'guest_login' %}
      <button class="link-underline">Continue as guest</button>
    {% endform %}
  {%- endif -%}
</div>
